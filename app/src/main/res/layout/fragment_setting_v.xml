<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="97dp"
        android:background="@drawable/round_border"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingDefaultResource">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/settingProfile"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="20dp"
                android:layout_weight="10"
                android:gravity="center"
                android:text="실내온도 : "
                android:textColor="@color/fragmentHomeFont"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/settingEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="null@null.null"
            android:textAlignment="center"
            android:textColor="@color/fontDark"
            android:textSize="15sp" />

        <Button
            android:id="@+id/settingLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/air_temp_line"
            android:text="로그아웃"
            android:textColor="@color/recyclerViewItemFont"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>